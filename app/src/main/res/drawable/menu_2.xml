<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!--    右上の円の背景を変える-->
    <item>
        <shape
            android:shape="rectangle">

            <gradient
                android:angle="90"
                android:startColor="#f5deb3"
                android:endColor="#f5deb3" />
        </shape>
    </item>
<!--    ここが右上の円-->
    <item
        android:background="#f5deb3">
        <shape
            android:shape="rectangle"
            android:background="#fafafa">

            <corners
                android:radius="100dp" />
            <gradient
                android:angle="90"
                android:startColor="#87cefa"
                android:endColor="#87cefa" />
        </shape>
    </item>
<!--    ここが上の四角-->
    <item
        android:right="100dp">
        <shape
            android:shape="rectangle" >

            <gradient
                android:angle="90"
                android:startColor="#87cefa"
                android:endColor="#87cefa" />
        </shape>
    </item>
    <item
        android:top="100dp">
        <shape
            android:shape="rectangle" >

            <gradient
                android:angle="90"
                android:startColor="#ff8c00"
                android:endColor="#87cefa" />
        </shape>
    </item>
</layer-list>