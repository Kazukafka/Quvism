<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!--    ここが右上の円-->
    <item>
        <shape
            android:shape="rectangle">

            <corners
                android:radius="100dp" />
            <gradient
                android:angle="90"
                android:startColor="#8888ff"
                android:endColor="#8888ff" />
        </shape>
    </item>
<!--    ここが上の四角-->
    <item
        android:right="100dp">
        <shape
            android:shape="rectangle" >

            <gradient
                android:angle="90"
                android:startColor="#8888ff"
                android:endColor="#8888ff" />
        </shape>
    </item>
    <item
        android:top="100dp">
        <shape
            android:shape="rectangle" >

            <gradient
                android:angle="90"
                android:startColor="#ff0000"
                android:endColor="#8888ff" />
        </shape>
    </item>
</layer-list>